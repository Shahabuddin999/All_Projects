pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'Java17'
    }

    triggers {
        // Optional: This ensures manual trigger from webhook
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    credentialsId: 'github-creds', 
                    url: 'https://github.com/Shahabuddin999/All_Projects.git'
            }
        }

        stage('Build') {
            steps {
                dir('jenkinDemo') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkinDemo') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('jenkinDemo') {
                    echo "Deploying application..."
                    sh 'java -jar target/jenkinDemo-0.0.1-SNAPSHOT.jar &'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build and deployment successful !"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}
