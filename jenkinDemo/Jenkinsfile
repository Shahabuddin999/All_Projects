pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'JDK-17'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/Shahabuddin999/All_Projects.git'
            }
        }

        stage('Build') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy & Test API') {
            steps {
                dir('jenkinDemo') {
                    echo "Starting application on port 8081..."
                    
                    // Start the app in background and redirect logs
                    bat 'start /B java -jar target\\jenkinDemo-0.0.1-SNAPSHOT.jar --server.port=8081 > app.log 2>&1'

                    // Wait longer so the app fully boots (Spring Boot takes time)
                    bat 'ping -n 20 127.0.0.1 >nul'

                    // Check logs to confirm it started
                    bat 'type app.log'

                    // Call the API endpoint
                    bat 'curl http://localhost:8081/show'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build and deployment successful!"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}
