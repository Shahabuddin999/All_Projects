pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'JDK-17'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/Shahabuddin999/All_Projects.git'
            }
        }

        stage('Build') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy & Test API') {
            steps {
                dir('jenkinDemo') {
                    echo "üöÄ Stopping any process using port 8081..."
                    bat '''
                        for /f "tokens=5" %%a in ('netstat -ano ^| findstr :8081') do taskkill /F /PID %%a
                        exit /b 0
                    '''

                    echo "üöÄ Starting application on port 8081..."
                    bat 'start /MIN java -jar target\\jenkinDemo-0.0.1-SNAPSHOT.jar'

                    echo "‚è≥ Waiting for application to start..."
                    bat '''
                        setlocal enabledelayedexpansion
                        for /L %%i in (1,1,30) do (
                            curl -s http://localhost:8081/actuator/health >nul 2>&1
                            if !errorlevel! == 0 (
                                echo Application is UP!
                                exit /b 0
                            )
                            timeout /t 2 >nul
                        )
                        echo Application failed to start in time!
                        exit /b 1
                    '''

                    echo "üîç Running API Tests..."
                    // Example test call
                    bat 'curl -s http://localhost:8081/actuator/health'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment & Tests Successful!"
        }
        failure {
            echo "‚ùå Build or API Test Failed!"
        }
    }
}