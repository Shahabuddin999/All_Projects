pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'JDK-17'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/Shahabuddin999/All_Projects.git'
            }
        }

        stage('Build') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy & Test API') {
            steps {
                dir('jenkinDemo') {
                    echo "üöÄ Starting application on port 8081..."

                    // Kill any old process running on 8081 (optional cleanup)
                    bat 'for /f "tokens=5" %a in (\'netstat -ano ^| findstr :8081\') do taskkill /F /PID %a'

                    // Start Spring Boot in background with logs redirected
                    bat 'start /MIN cmd /c "java -jar target\\jenkinDemo-0.0.1-SNAPSHOT.jar --server.port=8081 > app.log 2>&1"'

                    // Wait for Spring Boot to fully start
                    bat 'ping -n 20 127.0.0.1 >nul'

                    // Show logs for debugging
                    bat 'type app.log'

                    // Test API endpoint
                    bat 'curl http://localhost:8081/show'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build, deployment & API test successful!"
        }
        failure {
            echo "‚ùå Build or API test failed!"
        }
    }
}
