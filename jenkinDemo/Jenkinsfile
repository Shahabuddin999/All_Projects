pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'JDK-17'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/Shahabuddin999/All_Projects.git'
            }
        }

        stage('Build') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkinDemo') {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Starting application on port 8081..."
                dir('jenkinDemo') {
                    // Run Spring Boot on port 8081 to avoid Jenkins's 8080
                    bat 'start /B java -jar target\\jenkinDemo-0.0.1-SNAPSHOT.jar --server.port=8081'
                    
                    // Wait for the server to boot up
                    bat 'ping -n 10 127.0.0.1 >nul'
                    
                    // Call your API
                    bat 'curl http://localhost:8081/show'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build and deployment successful!"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}
